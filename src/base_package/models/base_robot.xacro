    <link name="base_link"></link>

    <joint name="odrive_joint" type="fixed">
        <parent link="base_link">
        <child link="odrive_base">
    </joint>

    <link name="odrive_base">
        <inertial>
            <origin rpy="0 0 0" xyz="-0.1 0 0.07"/>
            <mass value="5"/>
            <inertia ixx="0.05" ixy="0" ixz="0" iyy="0.06" iyz="0" izz="0.03"/>
        </inertial>
        <visual>
            <geometry>
                <cylinder length="0.2" radius="0.06"/>
            </geometry>
            <origin xyz="0 0 .1" />
            <material name="Black">
                <color rgba="0 1.0 1.0 .50"/>
            </material>
        </visual>
        <collision>
            <origin rpy="0 0 0" xyz="-0.015 0 0.07"/>
            <geometry>
              <cylinder length="0.17" radius="0.139"/>
            </geometry>
            <material name="Grey"/>
        </collision>
        <!-- <self_collision_checking>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <geometry>
                <capsule length="0.25" radius="0.15"/>
            </geometry>
        </self_collision_checking> -->
    </link>

    <joint name="shoulder" type="continuous">
        <parent link="odrive_base"/>
        <child link="upperarm"/>
        <origin xyz="0 0 .2" rpy="1.57079632679 0 0"/>
        <axis xyz="0 1 0" />
        <limit drake:acceleration="8.57" effort="320" lower="-2.96705972839" upper="2.96705972839" velocity="1.4835298641951802"/>
        <dynamics damping="0.5"/>
    </joint>

    <link name="upperarm">
        <inertial>
            <origin rpy="0 0 0" xyz="0 -0.03 0.12"/>
            <mass value="5.76"/>
            <inertia ixx="0.033" ixy="0" ixz="0" iyy="0.0333" iyz="0" izz="0.0123"/>
        </inertial>
        <visual>
            <geometry>
                <box size=".04 .04 .3"/>
            </geometry>
            <origin rpy="0 0 0" xyz="0 .02 .15" />
        </visual>
        <collision>
            <origin rpy="0 0 0" xyz="0 -0.014 0.14"/>
            <geometry>
              <cylinder length="0.29" radius="0.101"/>
            </geometry>
            <material name="Grey"/>
        </collision>
    </link>

